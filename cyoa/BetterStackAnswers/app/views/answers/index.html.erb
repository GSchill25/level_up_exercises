<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Question</th>
      <th>Is accepted</th>
      <th>Up vote count</th>
      <th>Creation date</th>
      <th>Link</th>
      <th>Last edit date</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer_id %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.is_accepted %></td>
        <td><%= answer.up_vote_count %></td>
        <td><%= answer.creation_date %></td>
        <td><%= answer.link %></td>
        <td><%= answer.last_edit_date %></td>
        <td><%= answer.body %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

