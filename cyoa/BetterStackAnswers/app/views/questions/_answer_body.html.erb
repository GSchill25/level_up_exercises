  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading<%= question.id %>">
      <h4 class="panel-title">
        <a class="collapsed" data-toggle="collapse"  href="#collapse<%= question.id %>" aria-expanded="false" aria-controls="collapse<%= question.id %>">
          Show Answer
        </a>
      </h4>
    </div>
    <div id="collapse<%= question.id %>" class="panel-collapse collapse" aria-labelledby="heading<%= question.id %>">
      <div class="panel-body">
        <%= question.answer.body.html_safe %>
      </div>
    </div>
  </div>