<p id="notice"><%= notice %></p>

<h1>Ruby Questions</h1>

    <% @questions.each do |question| %>
    <div class="panel panel-primary">
      <div class="panel-body">

        <div class="row">
          <div class="col-lg-7">
            <h3><%= raw question.title %></h3>
          </div>
          <div class="col-lg-4">
            <% question.tags.split(",").each do |tag| %>
              <span class="label label-success"><%= tag %></span>
            <% end %>
          </div>
          <div class="col-lg-1">
            <a role="button" class="btn btn-primary" href="<%= edit_question_path(question) %>">Edit</a>
          </div>
        </div></br>

        <table class="table">
          <thead>
            <tr>
              <th>Up Votes</th>
              <th>Answers Given</th>
              <th>Take me There</th>
            </tr>
          </thead>

          <tbody>
            <tr class="">
              <td align="center"><h4><%= question.up_vote_count %></h4></td>
              <td align="center"><h4><%= question.answer_count %></h4></td>
              <td><%= link_to question.link, question.link %></td>
            </tr>
          </tbody>
        </table></br>
        <div class="well well-lg">
          <%= question.body.nil? ? question.body : question.body.html_safe %>
        </div>
      </div>
    </div>
    </br></br>
    <% end %>

<br>

<%= link_to 'New Question', new_question_path %>
